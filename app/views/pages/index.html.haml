- build_meta_tags
#map{ style: "height: 400px" }
%h1.text-center
  = Rails.application.config.title
  (beta)
%p.text-center
  %em because karaoke is more than
  "Let it Go"
  %em on endless repeat
%p.text-center
  = link_to "Learn more about this site and how you can contribute &raquo;".html_safe, about_path, class: "btn btn-default btn-sm"
- content_for :scripts do
  :javascript
    window.setupMap(13, 122, 5);
    var data = JSON.parse("#{escape_javascript KaraokePlace.all.to_json(only: [:name, :latitude, :longitude, :slug])}")
    for (var i = 0; i < data.length; i++) {
      L.marker([ data[i]["latitude"], data[i]["longitude"]])
        .addTo(window.Map)
        .bindPopup("<strong><a href='#{karaoke_places_url}/" + data[i]["slug"] + "'>" + data[i]["name"] + "</a></strong>");
    }
