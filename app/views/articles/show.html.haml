- build_meta_tags title: @article.title, description: @article.summary

%ol.breadcrumb
  %li= link_to "Articles", articles_path
  %li= link_to @article.title, @article


%h1= @article.title 

#article_info
  by
  = @article.admin.name
  on
  = l @article.published_at, format: :long

#article_content= raw @article.content

= render 'pages/disqus_code'

- content_for :stylesheets do
  = raw @article.css

- content_for :scripts do
  = raw @article.js
