- build_meta_tags title: @artist.name
%h1= @artist.name

%p
  %em= @artist.original_name

- if @artist.collaborators.present?
  %p
    %em= @artist.name
    is comprised of:
  %ul
    - @artist.members.each do |member|
      %li
        %em= link_to member.collaborator.name, member.collaborator
        \-
        = member.role

= raw @artist.description_html

%p
  Tags:
  - @artist.tag_list.each do |tag|
    = link_to tag, artist_tag_path(tag)

- if @artist.collaborations.present?
  %h3 Related acts:
  %ul
    - @artist.collabs.each do |collab|
      %li
        %em= link_to collab.collaboration.name, collab.collaboration
        \-
        = collab.role

%h2 Song List

%table.table.table-striped
  %tr
    %th Name
    %th Alternative/Original Name
    %th Notes
    %th Release Date
    %th Keys
  - @artist.songs.order(:name).each do |song|
    %tr
      %td= link_to song.name, song
      %td= song.original_name
      %td= song.notes
      %td= song.released_at
      %td
        - song.karaoke_songs.each do |k|
          %span.label{ class: "label-#{k.karaoke_machine.display_mark_class}"}= k.karaoke_machine.display_mark_text
          = k.key
          %br


= render 'pages/disqus_code'
