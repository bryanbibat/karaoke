- if @artists.empty?
  %p
    %em No artists found

- else 
  %table.table.table-striped.table-condensed
    %tr
      %th Name
      %th.hidden-xs Alternative/Original Name
      %th Tags
    - @artists.each do |artist|
      %tr
        %td= link_to artist.name, artist
        %td.hidden-xs= artist.original_name
        %td= artist.tag_list

  - unless @remove_paginate
    = paginate @artists, theme: 'twitter-bootstrap-3'
